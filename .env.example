# =============================================================================
# 1033 Program Map - Environment Variables Template
# =============================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env to version control!
# =============================================================================

# Application Configuration
NODE_ENV=development
PORT=3000
SESSION_SECRET=your-strong-random-session-secret-here

# Database
MONGOLAB_URI=mongodb://localhost:27017/test

# Email Services (choose one)
# Mailgun
MAILGUN_USER=postmaster@your-domain.mailgun.org
MAILGUN_PASSWORD=your-mailgun-password

# Mandrill
MANDRILL_USER=your-mandrill-username
MANDRILL_PASSWORD=your-mandrill-api-key

# SendGrid
SENDGRID_USER=your-sendgrid-username
SENDGRID_PASSWORD=your-sendgrid-password

# API Keys
# New York Times
NYT_KEY=your-nyt-api-key

# Last.fm
LASTFM_KEY=your-lastfm-api-key
LASTFM_SECRET=your-lastfm-secret

# OAuth Providers
# Facebook
FACEBOOK_ID=your-facebook-app-id
FACEBOOK_SECRET=your-facebook-app-secret

# Instagram
INSTAGRAM_ID=your-instagram-client-id
INSTAGRAM_SECRET=your-instagram-client-secret

# GitHub
GITHUB_ID=your-github-client-id
GITHUB_SECRET=your-github-client-secret

# Twitter
TWITTER_KEY=your-twitter-consumer-key
TWITTER_SECRET=your-twitter-consumer-secret

# Google
GOOGLE_ID=your-google-client-id
GOOGLE_SECRET=your-google-client-secret

# LinkedIn
LINKEDIN_ID=your-linkedin-client-id
LINKEDIN_SECRET=your-linkedin-client-secret

# Steam
STEAM_KEY=your-steam-api-key

# Tumblr
TUMBLR_KEY=your-tumblr-consumer-key
TUMBLR_SECRET=your-tumblr-consumer-secret

# Payment & SMS Services
# Stripe
STRIPE_KEY=your-stripe-secret-key

# Twilio
TWILIO_SID=your-twilio-account-sid
TWILIO_TOKEN=your-twilio-auth-token

# Clockwork
CLOCKWORK_KEY=your-clockwork-api-key

# Location Services
# Foursquare
FOURSQUARE_ID=your-foursquare-client-id
FOURSQUARE_SECRET=your-foursquare-client-secret
FOURSQUARE_REDIRECT_URL=http://localhost:3000/auth/foursquare/callback

# Venmo
VENMO_ID=your-venmo-client-id
VENMO_SECRET=your-venmo-client-secret
VENMO_REDIRECT_URL=http://localhost:3000/auth/venmo/callback
